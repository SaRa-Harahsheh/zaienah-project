    <main class="main-content">


        <!--== بداية غلاف منطقة المنتجات ==-->
        <section class="section-space">
            <div class="container">
                <div class="shopping-cart-form table-responsive">
                    <form asp-controller="Cart" asp-action="AddToCart">
                        <table class="table text-center">
                            <thead>
                                <tr>
                                    <th class="product-remove">إزالة</th>
                                    <th class="product-thumbnail">صورة</th>
                                    <th class="product-name">المنتج</th>
                                    <th class="product-price">السعر</th>
                                    <th class="product-quantity">الكمية</th>
                                    <th class="product-subtotal">الإجمالي</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="tbody-item">
                                        <td class="product-remove">
                                            <button class="remove" onclick="removeItem(this, @item.Id)">×</button>
                                        </td>
                                        <td class="product-thumbnail">
                                            <div class="thumb">
                                                <a href="@Url.Action("Details", "Product", new { id = item.ProductId })">
                                                    <img src="/images/shop/@item.Image" width="68" height="84" alt="@item.Name">
                                                </a>
                                            </div>
                                        </td>
                                        <td class="product-name">@item.Name</td>
                                        <td class="product-price">
                                            <span class="price">@item.Price</span>
                                        </td>
                                        <td class="product-quantity">
                                            <div class="pro-qty">
                                                <button type="button" class="quantity-btn" onclick="changeQuantity(this, @item.ProductId, @item.Price, 'increase')">&#x2191;</button>
                                                <input type="text" title="الكمية" value="@item.Quantity" readonly>
                                                <button type="button" class="quantity-btn" onclick="changeQuantity(this, @item.ProductId , @item.Price, 'decrease')">&#x2193;</button>
                                            </div>
                                        </td>
                                        <td class="product-subtotal">
                                            <span class="price">@item.Total</span>
                                        </td>
                                    </tr>

                                    <!--<tr class="tbody-item-actions">
                                    <td colspan="6">
                                    <button type="submit" class="btn-update-cart">تحديث السلة</button>
                                    </td>
                                    </tr>-->
                                }
                            </tbody>
                        </table>
                    </form>
                </div>

