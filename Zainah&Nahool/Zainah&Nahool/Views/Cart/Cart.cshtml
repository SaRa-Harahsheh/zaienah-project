<script>
        // دالة لزيادة أو تقليل الكمية
    function changeQuantity(button, itemId, unitPrice, action) {
        const input = button.parentElement.querySelector('input');
        let quantity = parseInt(input.value);

        if (action === 'increase') {
            quantity++;  // زيادة الكمية
        } else if (action === 'decrease' && quantity > 1) {
            quantity--;  // تقليل الكمية إذا كانت أكبر من 1
        }

        // تحديث قيمة الإدخال (input)
        input.value = quantity;

        // تحديث المجموع الفرعي بناءً على الكمية الجديدة
        updateTotal(button, quantity, unitPrice);

        // إرسال الكمية الجديدة إلى السيرفر
        sendQuantityToServer(itemId, quantity);
    }

    // دالة لتحديث المجموع الفرعي للمنتج
    function updateTotal(button, quantity, unitPrice) {
        const subtotalElement = button.closest('tr').querySelector('.product-subtotal .price');
        const total = (quantity * unitPrice).toFixed(2);
        subtotalElement.textContent = total;
    }

    // دالة لإرسال الكمية إلى السيرفر
       function sendQuantityToServer(itemId, quantity) {
        fetch('/Cart/UpdateQuantity', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ itemId: itemId, quantity: quantity })  // استخدمي القيمة القادمة من البراميتر
        })
        .then(response => response.json())
        .then(data => {
            if (data.redirect) {
                window.location.href = data.redirect;  // تحويل للصفحة المطلوبة
            } else {
                console.log("تم تحديث الكمية بنجاح");
            }
        })
        .catch(error => {
            alert("فشل الاتصال بالسيرفر");
            console.error("خطأ في الاتصال بالسيرفر:", error);
        });
    }


    // دالة لحذف العنصر من السلة
    function removeItem(button, itemId) {
        const row = button.closest('tr');
        row.remove();

        fetch(`/Cart/RemoveFromCart?itemId=${itemId}`, {
            method: 'POST'
        })
        .then(response => {
            if (!response.ok) {
                alert('حدث خطأ أثناء الحذف من السلة');
            }
        })
        .catch(error => {
            alert('فشل الاتصال بالخادم');
            console.error(error);
        });
    }

</script>
